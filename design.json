  "host": "datahub.mksmart.org",
  "basePath": "/api/1.0",
  "tags": [
    {
      "name": "catalogue",
      "description": "About datasets",
      "externalDocs": {
        "description": "List the datasets a user can view. Access dataset metadata.",
        "url": "#"
      }
    },
    {
      "name": "datasources",
      "description": "List the data sources and details about them.",
      "externalDocs": {
        "description": "Find out more about this API",
        "url": "#"
      }
    },
    {
      "name": "subscriptions",
      "description": "Operations about user",
      "externalDocs": {
        "description": "Find out more about this API",
        "url": "#"
      }
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/datasets": {
      "get": {
        "tags": [
          "catalogue"
        ],
        "summary": "List datasets",
        "description": "List the datasets",
        "operationId": "catalogueListDatasets",
        "consumes": [
          "*/*"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
         
        ],
        "responses": {
          "200": {
            "description": "Returns the list of datasets",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Dataset"
                }
              }
          },
          "405": {
            "description": "Invalid input"
          }
        },
        "security": []
      }
    },
    "/dataset/{datasetId}": {
      "get": {
        "tags": [
          "catalogue"
        ],
        "summary": "Find dataset by ID",
        "description": "Returns a single dataset",
        "operationId": "getDatasetById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "datasetId",
            "in": "path",
            "description": "ID of dataset to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Dataset"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Dataset not found"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      },
      "post": {
        "tags": [
          "catalogue"
        ],
        "summary": "Updates a dataset in the catalogue with form data",
        "description": "",
        "operationId": "updateDatasetWithForm",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "datasetId",
            "in": "path",
            "description": "ID of dataset that needs to be updated",
            "required": true,
            "type": "string"
          },
          {
            "name": "title",
            "in": "formData",
            "description": "Updated title of the dataset",
            "required": false,
            "type": "string"
          },
          {
            "name": "description",
            "in": "formData",
            "description": "Updated description of the pet",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "405": {
            "description": "Invalid input"
          }
        },
        "security": [
          {
            "portal_auth": [
              "write:datasets",
              "read:datasets"
            ]
          }
        ]
      },
      "delete": {
        "tags": [
          "catalogue"
        ],
        "summary": "Deletes a dataset",
        "description": "",
        "operationId": "deleteDataset",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "api_key",
            "in": "header",
            "required": true,
            "type": "string"
          },
          {
            "name": "datasetId",
            "in": "path",
            "description": "Dataset id to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Dataset deleted"
          },
          "400": {
            "description": "Invalid dataset value"
          }
        },
        "security": [
          {
            "portal_auth": [
              "write:datasets",
              "read:datasets"
            ]
          }
        ]
      }
    },
    "/datasources": {
      "get": {
        "tags": [
          "datasources"
        ],
        "summary": "List my data sources",
        "description": "Provides a list of the data sources.",
        "operationId": "datasourcesList",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Datasource"
              }
            }
          }
        }
      }
    },
    "/subscriptions": {
      "get": {
        "tags": [
          "subscriptions"
        ],
        "summary": "List my subscriptions",
        "description": "Provides a list of the subscriptions.",
        "operationId": "subscriptionsList",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
           "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Subscription"
                }
              }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Dataset": {
      "type": "object",
      "properties": {
        "datasetId": {
          "type": "string",
          "description": "Dataset UUID"
        },
        "title": {
          "type": "string"
        },
        "page": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["datasetId"]
    },
    "Subscription": {
      "type": "object",
      "properties": {
         "key": {
           "type": "string"
         },
         "datasetId": {
           "type": "string"
         },
         "active": {
           "type": "boolean"
         }
      },
      "required":["key","datasetId","active"]
    },
    "Datasource": {
      "type": "object",
      "properties": {
         "datasetId": {
           "type": "string"
         },
         "url":{
           "type": "string"
         }
      },
      "required":["datasetId","url"]
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about MK:Smart Datahub API",
    "url": "http://datahub.mksmart.org"
  }
}
